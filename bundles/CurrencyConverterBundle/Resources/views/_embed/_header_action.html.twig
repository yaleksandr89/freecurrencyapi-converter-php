{% trans_default_domain 'CurrencyConverterBundle' %}

<div class="d-flex justify-content-between align-items-center">
    <h6 class="m-0 font-weight-bold text-primary">{{ sectionTitle }}</h6>
    <div class="ml-auto d-flex">
        {% if show_btn_update is defined and true == show_btn_update %}
            <a href="{{ path('update_currencies_action') }}" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm mr-2">
                {{ 'currencies.actions.update_currencies.load_or_update'|trans }}
            </a>
        {% endif %}
        <a href="{{ actionUrl }}" class="d-none d-sm-inline-block btn btn-sm btn-info shadow-sm">
            <i class="fas fa-plus fa-sm text-white-50"></i> {{ 'add'|trans }}
        </a>
    </div>
</div>
