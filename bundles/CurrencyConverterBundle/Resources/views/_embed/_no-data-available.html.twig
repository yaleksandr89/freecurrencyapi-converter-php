{% extends '@CurrencyConverter/layout/layout_main.html.twig' %}
{% trans_default_domain 'CurrencyConverterBundle' %}

{% block title_detailed %}{{ 'currencies.historical_rates'|trans }}{% endblock %}

{% block body %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary"></h6>
                <div class="ml-auto d-flex"></div>
            </div>
        </div>
        <div class="card-body">
            <div class="alert alert-warning alert-dismissible fade show text-center" role="alert">{{ message }}</div>
            <a href="{{ path('list_currencies_action') }}" class="btn btn-secondary btn-icon-split">
                <span class="icon text-white-50"><i class="fas fa-arrow-right"></i></span>
                <span class="text">{{ 'go_to_list_currencies'|trans }}</span>
            </a>
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-end align-items-center"></div>
        </div>
    </div>
{% endblock %}
